#!/usr/bin/env bash

xcode-select install
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

touch ~/.bash_profile
source ~/.bash_profile

# Brew
brew update
brew upgrade

# Install core utils, Mac OS X is outdated
brew install coreutils
brew install findutils
brew install bash
brew install vim

# Git
brew install git

# Vim config
git clone https://github.com/jelmersnoeck/vimconfig.git ~/.vimconfig && cd ~/.vimconfig && sh ./install.sh

# Dotfiles
git clone https://github.com/jelmersnoeck/dotfiles.git ~/.dotfiles && cd ~/.dotfiles && sh ./install/install.sh
source ~/.bashrc

# Tmux + dependency
brew install tmux
brew install reattach-to-user-namespace
brew install ctags
brew install wget
brew install keybase
brew install watch
brew install ag
brew install ctags-exuberant
brew install qt
brew wkhtmltopdf
brew install imagemagick
brew install ghostscript
brew install hg
brew install gpg
brew install gpg-agent
brew install pinentry-mac
brew install tree
brew tap homebrew/services
brew install heroku-toolbelt
brew install Goles/battery/battery
brew install httpie
brew install protobuf
brew install bzr
brew install glide
brew install hub
brew install libgit2 --with-libssh2
brew install htop
brew install terraform
brew install certbot
brew tap go-swagger/go-swagger
brew install go-swagger
brew install jq

# Go binaries
brew install go
mkdir -p ~/Projects/goprojects
go get github.com/heroku/hk
go get golang.org/x/tools/cmd/goimports
go get github.com/vektra/mockery/.../
go get github.com/axw/gocov/gocov
go get gopkg.in/matm/v1/gocov-html
go get github.com/golang/lint/golint
go get github.com/kisielk/errcheck
go get github.com/jteeuwen/go-bindata

# ansible
sudo easy_install pip
sudo pip install ansible
sudo pip install passlib

# Cask applications
brew install brew-cask
brew cask install xquartz
brew cask install google-chrome
brew cask install google-drive
brew cask install skype
brew cask install firefox
brew cask install 1password
brew cask install dropbox
brew cask install spotify
brew cask install slack
brew cask install iterm2
brew cask install vlc
brew cask install whatsapp
brew cask install alfred
brew cask install docker
brew cask install fantastical
brew cask install sizeup
brew cask install zoomus
brew cask install caffeine
brew cask install virtualbox
brew cask install spark
brew cask install harvest

brew cask install utorrent
open /usr/local/Caskroom/utorrent/latest/uTorrent.app

# diff-pdf needs quartz to be installed
brew install diff-pdf

# Kubernetes
curl -LO https://storage.googleapis.com/kubernetes-release/release/$(curl -s https://storage.googleapis.com/kubernetes-release/release/stable.txt)/bin/darwin/amd64/kubectl
curl -Lo minikube https://storage.googleapis.com/minikube/releases/v0.16.0/minikube-darwin-amd64 && chmod +x minikube && sudo mv minikube /usr/local/bin/

