# if git is installed, show the branc we're currently working in
type -t git > /dev/null \
	&& __prompt_vcs_string=' $(git-show-branch)${FG_YELLOW}$(git-dirty-state)' \
	|| __prompt_vcs_string='';

# set our prompt
export PS1="\${FG_GREEN}[\\u@\\h]${FG_YELLOW}[\\t]${FG_CYAN} \\w${FG_RED}$__prompt_vcs_string\\e[m\\n\\$ ";
