# PHPUnit aliases
alias phpunit='clear && phpunit --colors'

# Folder aliases
alias lnf='ls |wc -l'

# Tmux aliasing
alias dev='~/.bin/./tmux_open_project.sh'

# Ctags
alias bctags='ctags -h ".php" -R .'
#alias bctags='ctags --PHP-kinds=+cf .'

# Easily resource all your files
alias resource='source ~/.bashrc'

# Specific OS aliases
if [[ $OS == 'Darwin' ]]
then
	alias ls='ls -G'
	alias lsa='ls -alG'
fi

if [[ $OS == 'Linux' ]]
then
	alias lsa='ls -hal --color=tty'
fi
