# MySQL
alias mysqlstart='sudo /opt/local/share/mysql5/mysql/mysql.server start'
alias mysqlstop='sudo /opt/local/share/mysql5/mysql/mysql.server stop'
alias mysql='mysql5'

# PHPUnit aliases
alias phpunit='clear && phpunit --colors'

# Folder aliases
alias lnf='ls |wc -l'

# Ctags
# alias bctags='ctags -h ".php" -R .'
alias bctags='ctags -R --PHP-kinds=+cf .'

# Easily resource all your files
alias resource='source ~/.bashrc'

# Specific OS aliases
if [[ $OS == 'Darwin' ]]
then
	alias ls='ls -G'
	alias lsa='ls -alG'
fi

if [[ $OS == 'Linux' ]]
then
	alias lsa='ls -hal --color=tty'
fi
