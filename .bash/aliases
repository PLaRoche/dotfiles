# IRC
alias irc='ssh -t tilaa screen -dr'

# Tmux aliasing
alias dev='~/.bin/tmux_open_project.sh'

# Shortcuts
alias vc='cd ~/.vimconfig'
alias df='cd ~/.dotfiles'

# Git
alias g='git'
alias gst='git st'
alias gaa='git aa'
alias gco='git checkout'
alias gcom='git checkout master'
alias gcob='git cob'
alias gc='git commit'
alias gpo='git po'
alias gls='git ll'
alias gl='git l'
alias gba='git branch -a'
alias gra='git remote -v'
alias grp='git remote prune'
alias grpo='grp origin'
alias grs='git reset'
alias grsa='grs .'
alias gdf='git diff'
alias gdc='git dc'

# iOS Simulator
alias iossimulator="open /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app"

# JS
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'

# Install all bundled gems
alias bbundle='bundle install --path .bundle/gems --binstubs .bundle/bin'

# Ctags
alias bctags='ctags -R --exclude=.svn --exclude=.git --exclude=log *'

# Easily resource all your files
alias resource='source ~/.bashrc'

# Specific OS aliases
if [[ $OS == 'Darwin' ]]
then
	alias ls='ls -G'
	alias lsa='ls -alG'
fi

if [[ $OS == 'Linux' ]]
then
	alias lsa='ls -hal --color=tty'
fi
